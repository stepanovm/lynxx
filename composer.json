{
    "name": "stepanovm/lynxx",
    "description": "lynxx microframework",
    "authors": [
        {
            "name": "stepanovm",
            "email": "stepanovm77@yandex.ru"
        }
    ],
    "options": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2",
        "phpmailer/phpmailer": "~6.1",
        "symfony/dotenv": "^5.1",
        "psr/http-message": "^1.0",
        "ext-pdo": "*",
        "laminas/laminas-diactoros": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "Lynxx\\": "Lynxx",
            "app\\": "app",
            "tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php vendor/phpunit/phpunit/phpunit tests --colors=always"
    }
}
